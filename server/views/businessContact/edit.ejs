<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>




<!-- Content for the Edit Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" 
                    id="nameTextField"
                    placeholder="Enter the name"
                    name="name" 
                    value="<%= contactList.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="usernameTextField">Username</label>
                    <input type="text" class="form-control" 
                    id="usernameTextField"
                    placeholder="Enter the username"
                    name="username" 
                    value="<%= contactList.username %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="passwordTextField">Password</label>
                    <input type="text" class="form-control" 
                    id="passwordTextField"
                    placeholder="Enter the password"
                    name="released" 
                    value="<%= contactList.password %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" 
                    id="emailTextField"
                    placeholder="Enter the email"
                    name="email" 
                    value="<%= contactList.email %>"
                    required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    
                    <a href="/game-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
            </form>
        </div>
    </div>
</div>





